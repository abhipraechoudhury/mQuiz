<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="online.mquiz">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- permissions to access network/internet -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Student.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".Student.MainActivity"></activity>
        <activity android:name=".Student.ProfileActivity"></activity>
        <activity android:name=".Student.EditProfileActivity"></activity>
        <activity android:name=".Student.QuizActivity"></activity>
        <activity android:name=".Student.AvailableQuizActivity"></activity>
        <activity android:name=".Student.ArchiveActivity"></activity>
        <activity android:name=".Student.AttemptQuizActivity"></activity>
        <activity android:name=".Student.AttemptQuestionActivity"></activity>
        <activity android:name=".Student.SubmitPageActivity"></activity>
        <activity android:name=".Admin.PreviewActivity"></activity>
        <activity android:name=".Admin.AddStudent"></activity>
        <activity android:name=".Admin.AdminHomeActivity"></activity>
        <activity android:name=".Admin.CreateQuiz"></activity>
        <activity android:name=".Admin.Question_1"></activity>
        <activity android:name=".Admin.Question_last"></activity>
        <activity android:name=".Admin.QuizAdmin"></activity>
        <activity android:name=".Admin.Review_1"></activity>
        <activity android:name=".Admin.ReviewBegin"></activity>
        <activity android:name=".Admin.Students"></activity>
        <activity android:name=".Admin.ViewProgress"></activity>
        <activity android:name=".Admin.ViewStudent"></activity>
    </application>

</manifest>